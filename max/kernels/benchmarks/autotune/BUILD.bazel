load("//bazel:api.bzl", "modular_py_binary", "modular_py_test", "pkg_files", "requirement")

modular_py_binary(
    name = "kbench",
    srcs = [
        "__init__.py",
        "kbench.py",
        "utils.py",
    ],
    env = {
        "KERNEL_BENCHMARKS_ROOT": "$$BUILD_WORKSPACE_DIRECTORY/" + package_name() + "/..",
    },
    imports = ["."],
    main = "kbench.py",
    mojo_deps = [
        "@mojo//:internal_utils",
        "@mojo//:kv_cache",
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:nn",
        "@mojo//:quantization",
        "@mojo//:register",
        "@mojo//:stdlib",
    ],
    deps = [
        requirement("click"),
        requirement("numpy"),
        requirement("pandas"),
        requirement("pygments"),
        requirement("pyyaml"),
        requirement("rich"),
        requirement("scipy"),
        requirement("plotly"),
        requirement("tabulate"),
    ],
)

modular_py_binary(
    name = "kprofile",
    srcs = [
        "kprofile.py",
    ],
    imports = ["."],
    main = "kprofile.py",
    mojo_deps = [
        "@mojo//:internal_utils",
        "@mojo//:kv_cache",
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:nn",
        "@mojo//:quantization",
        "@mojo//:register",
        "@mojo//:stdlib",
    ],
    deps = [
        ":kbench",
        requirement("rich"),
    ],
)

modular_py_binary(
    name = "kplot",
    srcs = [
        "kplot.py",
    ],
    imports = ["."],
    main = "kplot.py",
    mojo_deps = [
        "@mojo//:internal_utils",
        "@mojo//:kv_cache",
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:nn",
        "@mojo//:quantization",
        "@mojo//:register",
        "@mojo//:stdlib",
    ],
    deps = [
        ":kbench",
        ":kprofile",
        requirement("plotly"),
        requirement("kaleido"),
    ],
)

modular_py_test(
    name = "autotune_tests",
    srcs = glob(["tests/*.py"]),
    data = glob(["tests/*.csv"]) + [
        "sample.mojo",
        "test.yaml",
        "//KGEN:CompilerRT",
        "//KGEN/tools/mojo",
    ],
    mojo_deps = [
        "@mojo//:internal_utils",
        "@mojo//:kv_cache",
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:nn",
        "@mojo//:quantization",
        "@mojo//:register",
        "@mojo//:stdlib",
    ],
    target_compatible_with = select({
        "//:asan": ["@platforms//:incompatible"],
        "//:ubsan": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    deps = [
        ":kbench",
        ":kplot",
        ":kprofile",
    ],
)

pkg_files(
    name = "autotune_files",
    srcs = [
        "kbench.py",
        "kplot.py",
        "kprofile.py",
        "pyproject.toml",
        "utils.py",
    ],
    prefix = "kernel-benchmark/autotune",
    visibility = ["//visibility:public"],
)
