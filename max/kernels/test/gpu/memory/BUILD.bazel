mojo_test(
    name = "test_tcgen05.test",
    srcs = ["test_tcgen05.mojo"],
    tags = ["gpu"],
    target_compatible_with = ["//:b200_gpu"],
    deps = [
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:stdlib",
    ],
)

mojo_filecheck_test(
    name = "test_tma.mojo.test",
    srcs = ["test_tma.mojo"],
    tags = ["gpu"],
    target_compatible_with = ["//:h100_gpu"],
    deps = [
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:stdlib",
    ],
)

[
    mojo_test(
        name = src + ".test",
        srcs = [src],
        tags = ["gpu"],
        target_compatible_with = ["//:has_gpu"],
        deps = [
            "@mojo//:layout",
            "@mojo//:linalg",
            "@mojo//:stdlib",
        ],
    )
    for src in glob(
        ["**/*.mojo"],
        exclude = _FILECHECK_TESTS + _OTHER_TESTS,
    )
]

filegroup(
    name = "test-sources",
    srcs = glob(["**/*.mojo"]),
    visibility = ["//utils/debugging/gpu-build-benchmarking:__subpackages__"],
)
