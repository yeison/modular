load("//bazel:api.bzl", "lit_tests")

lit_tests(
    name = "lit",
    size = "large",
    srcs = glob(["**/*.mojo"]),
    gpu_constraints = ["//:has_gpu"],
    mojo_deps = [
        "@mojo//:layout",
        "@mojo//:linalg",
        "@mojo//:stdlib",
    ],
    tags = [
        "gpu",
    ],
    tools = ["//KGEN/tools/mojo"],
)

filegroup(
    name = "test-sources",
    srcs = glob(["**/*.mojo"]),
    visibility = ["//utils/debugging/gpu-build-benchmarking:__subpackages__"],
)
