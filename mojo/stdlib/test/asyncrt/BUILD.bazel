load("//bazel:api.bzl", "mojo_test")

_TEST_DATA = [
    "asyncrt_test_utils.mojo",
]

_CPU_TESTS = [
    "smoke.mojo",
    "copies.mojo",
    "host_mapped.mojo",
    "timing.mojo",
    "memset.mojo",
]

_EXTRA_CONSTRAINTS = {
    "hip.mojo": ["//:amd_gpu"],
    "cuda.mojo": ["//:nvidia_gpu"],
}

[
    mojo_test(
        name = src + ".test",
        srcs = _TEST_DATA + [src],
        copts = [
            "-D",
            "MODULAR_ASYNCRT_DEVICE_CONTEXT_V2=gpu",
        ],
        main = src,
        tags = ["gpu"],
        target_compatible_with = ["//:has_gpu"] + _EXTRA_CONSTRAINTS.get(src, []),
        deps = [
            "//SDK/lib/API/mojo/max/tensor",
            "@mojo//:layout",
            "@mojo//:stdlib",
        ],
    )
    for src in glob(
        ["**/*.mojo"],
        exclude = _TEST_DATA,
    )
]

[
    mojo_test(
        name = src + ".cpu.test",
        srcs = _TEST_DATA + [src],
        copts = [
            "-D",
            "MODULAR_ASYNCRT_DEVICE_CONTEXT_V2=cpu",
        ],
        main = src,
        tags = ["gpu"],
        target_compatible_with = ["//:has_gpu"] + _EXTRA_CONSTRAINTS.get(src, []),
        deps = [
            "//SDK/lib/API/mojo/max/tensor",
            "@mojo//:layout",
            "@mojo//:stdlib",
        ],
    )
    for src in _CPU_TESTS
]
